{
	"version": 2,
	"settings": {
		"useRootPaddingAwareAlignments": true,
		"appearanceTools": true,
		"color": {
			"defaultPalette": false,
			"gradients": [],
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#111111",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#308dca",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#2879ae",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#f6f6f6",
					"name": "Tertiary",
					"slug": "tertiary"
				}
			]
		},
		"layout": {
			"contentSize": "640px",
			"wideSize": "960px"
		},
		"spacing": {
			"blockGap": "var(--wp--custom--style--block-gap)",
			"customPadding": true,
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw",
				"svmin",
				"svmax",
				"lvmin",
				"lvmax"
			],
			"spacingScale": {
				"operator": "*",
				"increment": 1.25,
				"steps": 7,
				"mediumStep": 1.5,
				"unit": "rem"
			}
		},
		"custom": {
			"gutter": "1rem",
			"spacing":{
				"outer":"1rem"
			},
			"line-height": {
				"0": 0,
				"1": 1,
				"xs": 1.15,
				"sm": 1.4,
				"md": 1.6,
				"lg": 1.8,
				"xl": 2,
				"2xl": 2.2,
				"3xl": 2.4
			},
			"style":{
				"block-gap": "clamp(0.85rem, 0.426rem + 2.12vw, 1.75rem)"
			},
			"border-width": "1px",
			"border-radius": "0.25rem",
			"padding": "0.25rem",
			"gap": "0.25rem"
		},
		"blocks": {
			"core/image": {
				"lightbox": {
					"allowEditing": true
				}
			}
		},
		"shadow": {
			"presets": [
				{
					"name": "Small(Hakoniwa)",
					"slug": "hakoniwa-shadow-sm",
					"shadow": "0 1px 2px 0 rgba(0, 0, 0, 0.05)"
				},
				{
					"name": "Normal(Hakoniwa)",
					"slug": "hakoniwa-shadow-md",
					"shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1)"
				},
				{
					"name": "Medium(Hakoniwa)",
					"slug": "hakoniwa-shadow",
					"shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1)"
				},
				{
					"name": "Large(Hakoniwa)",
					"slug": "hakoniwa-shadow-lg",
					"shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1)"
				},
				{
					"name": "XL(Hakoniwa)",
					"slug": "hakoniwa-shadow-xl",
					"shadow": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1)"
				},
				{
					"name": "2XL(Hakoniwa)",
					"slug": "hakoniwa-shadow-2xl",
					"shadow": "0 25px 50px -12px rgba(0, 0, 0, 0.25)"
				},
				{
					"name": "inner(Hakoniwa)",
					"slug": "hakoniwa-shadow-inner",
					"shadow": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.05)"
				}
			]
		},
		"typography": {
			"fluid": {
				"maxViewportWidth": "1000px",
				"minViewportWidth": "320px"
			},
			"writingMode": true,
			"customLineHeight": true,
			"fontFamilies": [
				{
					"fontFamily": "-apple-system,BlinkMacSystemFont,Roboto,\"Droid Sans\",Meiryo,YuGothic,\"Hiragino Kaku Gothic Pro\",\"MS PMincho\",sans-serif",
					"name": "System Font",
					"slug": "system-font"
				},
				{
					"fontFamily": "\"Yu Mincho\", YuMincho, \"Hiragino Mincho ProN W3\", \"Hiragino Mincho ProN\", \"HG明朝E\", \"ＭＳ Ｐ明朝\", \"ＭＳ 明朝\", serif",
					"name": "mincho",
					"slug": "mincho"
				},
				{
					"fontFamily": "\"Source Serif Pro\", serif",
					"name": "Source Serif Pro",
					"slug": "source-serif-pro"
				}
			],
			"fontSizes": [
				{
					"fluid": false,
					"name": "1rem",
					"slug": "1rem",
					"size": "1rem"
				},
				{
					"fluid": {
						"min": "1rem",
						"max": "1.125rem"
					},
					"name": "main-content",
					"slug": "main-content",
					"size": "1.125rem"
				},
				{
					"fluid": {
						"min": "2.6rem",
						"max": "3rem"
					},
					"name": "5XL",
					"slug": "5xl",
					"size": "3rem"
				},
				{
					"fluid": {
						"min": "2.2rem",
						"max": "2.4rem"
					},
					"name": "4XL",
					"slug": "4xl",
					"size": "2.4rem"
				},
				{
					"fluid": {
						"min": "1.8rem",
						"max": "2rem"
					},
					"name": "3XL",
					"slug": "3xl",
					"size": "2rem"
				},
				{
					"fluid": {
						"min": "1.15rem",
						"max": "1.75rem"
					},
					"name": "2XL",
					"slug": "2xl",
					"size": "1.75rem"
				},
				{
					"fluid": {
						"min": "1.1rem",
						"max": "1.4rem"
					},
					"name": "XL",
					"slug": "xl",
					"size": "1.4rem"
				},
				{
					"fluid": {
						"min": "1rem",
						"max": "1.25rem"
					},
					"name": "Large",
					"slug": "lg",
					"size": "1.25rem"
				},
				{
					"fluid": {
						"min": "0.9rem",
						"max": "1.1rem"
					},
					"name": "Medium",
					"slug": "md",
					"size": "1.1rem"
				},
				{
					"fluid": {
						"min": "0.85rem",
						"max": "1.05rem"
					},
					"name": "Small",
					"slug": "sm",
					"size": "1.05rem"
				},
				{
					"fluid": {
						"min": "0.8rem",
						"max": "1rem"
					},
					"name": "XS",
					"slug": "xs",
					"size": "1rem"
				},
				{
					"fluid": {
						"min": "0.75rem",
						"max": "0.875rem"
					},
					"name": "2XS",
					"slug": "2xs",
					"size": "0.875rem"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"spacing": {
			"blockGap": "var(--wp--custom--style--block-gap)",
			"padding": {
                "top": "0",
                "right": "2rem",
                "bottom": "0",
                "left": "2rem"
            }
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)",
			"fontSize": "var(--wp--preset--font-size--1-rem)",
			"lineHeight": "var(--wp--custom--line-height--md)",
			"letterSpacing":"0.07rem"
		},
		"elements": {
			"heading":{
				"typography": {
					"fontWeight": "normal",
					"lineHeight": "var(--wp--custom--line-height--sm)"
				}
			},
			"h2": {
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--80)"
					}
				}
			},
			"button": {
				"border": {
					"radius": "0"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--base)"
				},
				":hover": {
					"color": {
						"background": "color-mix(in srgb, var(--wp--preset--color--primary) 80%, #222)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":focus": {
					"color": {
						"background": "color-mix(in srgb, var(--wp--preset--color--primary) 80%, #222)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":active": {
					"color": {
						"background": "color-mix(in srgb, var(--wp--preset--color--primary) 80%, #222)",
						"text": "var(--wp--preset--color--base)"
					}
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				}
			}
		},
		"blocks": {
			"core/heading": {
				"elements": {
                    "h2": {
						"spacing": {
							"margin": {
								"top": "var(--wp--preset--spacing--80)"
							}
						}
                    },
                    "h3": {
						"spacing": {
							"margin": {
								"top": "var(--wp--preset--spacing--80)"
							}
						}
                    },
					"h4": {
						"spacing": {
							"margin": {
								"top": "var(--wp--preset--spacing--70)"
							}
						}
                    },
					"h5": {
						"spacing": {
							"margin": {
								"top": "var(--wp--preset--spacing--70)"
							}
						}
                    },
					"h6": {
						"spacing": {
							"margin": {
								"top": "var(--wp--preset--spacing--70)"
							}
						}
                    }
                }
			},
			"core/paragraph": {
				"typography": {
					"lineHeight": "var(--wp--custom--line-height--lg)"
				}
			},
			"core/buttons": {
				"spacing": {
					"blockGap": "var(--wp--custom--style--block-gap)"
				}
			},
			"core/button": {
				"border": {
					"radius": "0"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)"
				}
			},
			"core/post-title": {
				"spacing": {
					"margin": {
						"bottom": "1.25rem",
						"top": "1.25rem"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--2-xl)"
				}
			},
			"core/query-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--2-xl)"
				}
			},
			"core/cover": {
				"spacing": {
					"padding": {
						"top": "0px",
						"right": "0px",
						"bottom": "0px",
						"left": "0px"
					},
					"blockGap": "var(--wp--custom--style--block-gap)"
				}
			},
			"core/columns": {
				"spacing": {
					"blockGap": "var(--wp--custom--style--block-gap)"
				}
            },
			"core/comments": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--primary)"
						},
						":hover": {
							"typography": {
								"textDecoration": "none"
							}
						},
						"typography": {
							"textDecoration": "underline"
						}
					}
                }
			},
			"core/comment-author-name": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						},
						"typography": {
							"textDecoration": "none"
						}
					}
                }
			},
			"core/comment-date": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						},
						"typography": {
							"textDecoration": "none"
						}
					}
                }
			},
			"core/separator": {
				"border": {
					"width": "1px"
				}
			},
			"core/post-content": {
				"elements": {
					"h1": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--2-xl)"
                        }
                    },
                    "h2": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--xl)"
                        },
						"spacing": {
							"margin": {
								"top": "var(--wp--preset--spacing--80)"
							}
						}
                    },
                    "h3": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--lg)"
                        },
						"spacing": {
							"margin": {
								"top": "var(--wp--preset--spacing--80)"
							}
						}
                    },
					"h4": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--md)"
                        },
						"spacing": {
							"margin": {
								"top": "var(--wp--preset--spacing--70)"
							}
						}
                    },
					"h5": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--sm)"
                        },
						"spacing": {
							"margin": {
								"top": "var(--wp--preset--spacing--70)"
							}
						}
                    },
					"h6": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--xs)"
                        },
						"spacing": {
							"margin": {
								"top": "var(--wp--preset--spacing--70)"
							}
						}
                    },
					"link": {
						"color": {
							"text": "var(--wp--preset--color--primary)"
						},
						":hover": {
							"typography": {
								"textDecoration": "none"
							}
						},
						"typography": {
							"textDecoration": "underline"
						}
					}
                }
			},
			"core/post-excerpt": {
				"spacing": {
					"margin": {
						"bottom": "0.5rem",
						"top": "0.5rem"
					}
				}
			},
			"core/query": {
			},
			"core/search": {
            },
			"core/calendar": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--primary)"
						}
					}	
				}
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		},
		{
			"area": "uncategorized",
			"name": "sidebar",
			"title": "Sidebar"
		}
	]
}
